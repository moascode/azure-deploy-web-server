{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "tagging-policy-definition", 
    "properties": {
      "displayName": "Deny creation of resources without tags",
      "policyType": "BuiltIn",
      "mode": "Indexed",
      "description": "This policy denies creation of a resources if that do not have tags.",
      "metadata": {
        "version": "1.0.1",
        "category": "Tags"
      },
      "policyRule": {
        "if": {
          "value": "[less(length(field('tags')), 1)]",
          "equals": "true"
        },
        "then": {
          "effect": "deny"
        }
      }
    }
  }